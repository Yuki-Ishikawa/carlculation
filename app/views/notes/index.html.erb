<div class="image">
	<%= image_tag("car4.jpg", :class => "image-size-top") %>
</div>

<div class="note-product">
	<h3>整備記録一覧</h3>
		<div class="note-item">
			<% @notes.each do |note| %>
				<div class="note-item-contents clearfix">
					<div class="note-item-left">
						<%= link_to note_path(note.id) do %>
							<%= attachment_image_tag note, :image, fallback: "no_image_user.jpeg", :class => "note-item-image" %>
						<% end %>
					</div>
					<div class="note-item-right">
						<p>Title: <%= note.title %></p>
						<p><%= truncate(note.introduction, length:100) %></p>
						<%= link_to user_path(note.user.id) do %>
							From: <%= note.user.user_name %>
						<% end %>
						<div class="date">
							<span>Date: <%= note.created_at.strftime('%Y/%m/%d') %></span>
						</div>
					</div>
				</div>
			<% end %>
		</div>
	<%= paginate @notes %>
</div>