<div class="image">
	<%= image_tag("car2.jpg", :class => "image-size-top") %>
</div>
<div class="blog-product">
	<h3><%= @user.blog_title %></h3>
		<div class="blog-item">
			<% @user.blogs.each do |blog| %>
				<div class="blog-item-contents clearfix">
					<div class="blog-item-left">
						<%= link_to blog_path(blog.id) do %>
							<%= attachment_image_tag blog, :image, fallback: "no_image_user.jpeg", :class => "blog-item-image" %>
						<% end %>
					</div>
					<div class="blog-item-right">
						<p>Title: <%= blog.title %></p>
						<p><%= truncate(blog.introduction, length:100) %></p>
						<%= link_to user_path(blog.user.id) do %>
							From: <%= blog.user.user_name %>
						<% end %>
						<div class="date">
							<span>Date: <%= blog.created_at.strftime('%Y/%m/%d') %></span>
						</div>
					</div>
				</div>
			<% end %>
		</div>
</div>