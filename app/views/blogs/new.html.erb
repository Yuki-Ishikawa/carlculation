<div class="new-blog">
	<h1 class="new-blog-title">ブログ投稿</h1>
	<%= current_user.user_name %>
		<%= form_for(@blog) do |f| %>
			<div class="new-box">
				<div class="field">
					<%= f.label :題名 %><br>
					<%= f.text_field :title, autocomplete: "題名", class:"new-input" %>
				</div>

				<div class="field">
					<%= f.label :本文 %><br>
					<%= f.text_area :introduction, autocomplete: "本文", class:"new-input" %>
				</div>

			    <div class="field">
	    			<%= f.label :ブログ画像 %><br />
	    			<%= f.attachment_field :image, autocomplete: "ブログ画像", class:"" %>
	    		</div>
	    	</div>

	    	<div class="actions">
    			<%= f.submit "投稿", class:"new-button" %>
    		</div>
		<% end %>
</div>