<div class="image">
	<%= image_tag("/images/car5.jpg", :class => "image-size-top") %>
</div>
<div class="blog-show">
	<h3>Edit blog</h3>
		<%= form_for(@blog) do |f| %>
			<div class="blog-edit-box">
				<div class="field">
					<%= f.label :題名 %><br>
					<%= f.text_field :title, autocomplete: "題名", class:"blog-title-input form-control" %>
				</div>

				<div class="field">
					<%= f.label :本文 %><br>
					<%= f.text_area :introduction, autocomplete: "本文", class:"blog-introduction-input" %>
				</div>

			    <div class="field">
	    			<%= f.label :ブログ画像 %><br />
	    			<%= f.attachment_field :image, autocomplete: "ブログ画像", class:"" %>
	    		</div>
	    	</div>

	    	<div class="actions">
    			<%= f.submit "更新", class:"blog-button btn btn-info" %>
    		</div>
		<% end %>

<div class="more">
	<%= link_to "削除", blog_path(@blog.id), method: :delete %>
</div>
</div>