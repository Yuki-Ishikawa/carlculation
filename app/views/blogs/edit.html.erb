<div class="edit-blog">
	<h1 class="edit-blog-title">ブログ編集</h1>
	<%= current_user.user_name %>
		<%= form_for(@blog) do |f| %>
			<div class="edit-box">
				<div class="field">
					<%= f.label :題名 %><br>
					<%= f.text_field :title, autocomplete: "題名", class:"edit-input" %>
				</div>

				<div class="field">
					<%= f.label :本文 %><br>
					<%= f.text_area :introduction, autocomplete: "本文", class:"edit-input" %>
				</div>

			    <div class="field">
	    			<%= f.label :ブログ画像 %><br />
	    			<%= f.attachment_field :image, autocomplete: "ブログ画像", class:"" %>
	    		</div>
	    	</div>

	    	<div class="actions">
    			<%= f.submit "更新", class:"edit-button" %>
    		</div>
		<% end %>
</div>

<div class="destroy">
	<%= link_to "削除", blog_path(@blog.id), method: :delete %>
</div>