<div class="image">
	<%= image_tag("/images/car7.jpg", :class => "image-size-top") %>
</div>

<div class="search">
	<div class="search-table">
		<% if @table_name == 'Blog' %>
		    <h3>検索結果: ブログ</h3>
		<% elsif @table_name == 'Note' %>
		    <h3>検索結果: 整備記録</h3>
		<% elsif @table_name == 'Car' %>
			<h3>検索結果: 愛車</h3>
		<% else %>
			<h3>検索結果: ユーザー</h3>
		<% end %>
	</div>

	<div class="search-result clearfix">
		<% @searched.each do |s| %>
			<% if @table_name == 'Blog' %>
				<div class="search-once">
					<div class="search-once-color clearfix">
						<div class="search-left">
							<%= link_to blog_path(s.id) do %>
								<%= attachment_image_tag s, :image, fallback: "/images/no_image_photo.jpeg", size: "150x150" %>
							<% end %>
						</div>
						<div class="search-right">
							<p>Title: <%= s.title %></p>
							<p><%= truncate(s.introduction, length:100) %></p>
							<%= link_to user_path(s.user.id) do %>
								<p>From: <%= s.user.user_name %></p>
							<% end %>
						</div>
					</div>
				</div>

			<% elsif @table_name == 'Note' %>
				<div class="search-once">
					<div class="search-once-color clearfix">
						<div class="search-left">
							<%= link_to note_path(s.id) do %>
								<%= attachment_image_tag s, :image, fallback: "/images/no_image_photo.jpeg", size: "150x150" %>
							<% end %>
						</div>
						<div class="search-right">
							<p>Title: <%= s.title %></p>
							<p><%= truncate(s.introduction, length:100) %></p>
							<%= link_to user_path(s.user.id) do %>
								<p>From: <%= s.user.user_name %></p>
							<% end %>
						</div>
					</div>
				</div>

			<% elsif @table_name == 'Car' %>
				<div class="search-once">
					<div class="search-once-color clearfix">
						<div class="search-left">
							<%= link_to car_path(s.id) do %>
								<%= attachment_image_tag s, :image, fallback: "/images/no_image_photo.jpeg", size: "150x150" %>
							<% end %>
						</div>
						<div class="search-right">
							<p>車種: <%= s.car_model %></p>
							<p><%= truncate(s.introduction, length:100) %></p>
							<%= link_to user_path(s.user.id) do %>
								<p>From: <%= s.user.user_name %></p>
							<% end %>
						</div>
					</div>
				</div>

			<% else %>
				<div class="search-once">
					<div class="search-once-color clearfix">
						<div class="search-left">
							<%= link_to user_path(s.id) do %>
								<%= attachment_image_tag s, :profile_image, fallback: "/images/no_image_user.jpeg", size: "150x150" %>
							<% end %>
						</div>
						<div class="search-right">
							<p>Name: <%= s.user_name %></p>
							<p><%= truncate(s.self_introduction, length:100) %></p>
						</div>
					</div>
				</div>
			<% end %>
		<% end %>
	</div>
</div>