<body class="text-center">
      <h2 class="h3 mb-3 font-weight-normal">Admin Log in</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
          <p class="px-4 py-5"><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email" %></p>
      </div>
      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder:"Password" %>
      </div>
    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <div class="checkbox mb-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      </div>
  <% end -%>

  <div class="actions">
    <div class="col-md-offset-5 col-md-2">
      <%= f.submit "Log in", class: "btn btn-info btn-block" %>
    </div>
  </div>
<% end %>
